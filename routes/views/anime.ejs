<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        .logo {
            height: 32px;
        }

        .animeImg {
            margin: 2rem;
            width: auto;
            height: 50vh;
            border-radius: 20px;
        }
    </style>

    <!-- font awesome  -->
    <script src="https://kit.fontawesome.com/2c582398a5.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/index.css">

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body>
    <!-- Navbar section  -->
    <%- include('_navbar') %>
    <center>
        <form class="d-flex w90" method="post">
            <input class="form-control" list="datalistOptions" name="quary" id="exampleDataList"
                placeholder="Type to search...">
            <datalist id="datalistOptions">
                <option selected>Choose your category</option>
                <option value="neko">
                <option value="hug">
                <option value="pat">
                <option value="waifu">
                <option value="cry">
                <option value="kiss">
                <option value="slap">
                <option value="smug">
                <option value="punch">
            </datalist>
            <button type="submit" id="btn" class="btn btn-success">Search</button>
        </form>
        <%if (imageUrl != null) { %>
        <img alt="img" class="animeImg" src=<%= imageUrl %>>
        <% } %>
    </center>
    <script src="/javascript/signout.js" defer></script>
</body>

</html>